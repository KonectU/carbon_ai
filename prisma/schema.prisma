datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum ScanType {
  WEBSITE
  AI
}

enum ScanStatus {
  QUEUED
  VISITING
  ANALYZING
  COMPLETED
  FAILED
}

enum Plan {
  FREE
  PRO
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  passwordHash  String
  name          String?
  image         String?
  emailVerified DateTime?
  plan          Plan      @default(FREE)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  scans         Scan[]
  sessions      Session[]
  accounts      Account[]
}

model Scan {
  id            String     @id @default(cuid())
  userId        String
  user          User       @relation(fields: [userId], references: [id])
  type          ScanType
  status        ScanStatus @default(QUEUED)
  inputJson     Json
  progress      Json?
  resultJson    Json?
  assumptions   Json?
  visitedUrl    String?
  visitedAt     DateTime?
  screenshot    String?
  pagesScanned  Int?
  errorMessage  String?
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
